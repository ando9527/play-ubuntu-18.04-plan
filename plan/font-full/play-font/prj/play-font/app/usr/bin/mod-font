	#echo $@
	#echo "$@"

	local cmd="$1"
	shift
	local args="$@"

	#echo $args
	#echo "$args"

	#echo $cmd
	#echo "$cmd"
}

#demo_cmd_run "$@"

#
### Tail: demo #################################################################
